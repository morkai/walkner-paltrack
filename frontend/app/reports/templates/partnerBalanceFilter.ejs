<form class="well filter-form">
  <% if (!user.data.partner) { %>
  <div class="form-group has-required-select2">
    <label for="<%- idPrefix %>-partner" class="control-label is-required"><%- t('reports', 'filter:partner') %></label>
    <input id="<%- idPrefix %>-partner" name="partner" type="text" required>
  </div>
  <% } %>
  <div class="form-group">
    <label for="<%- idPrefix %>-from" class="control-label is-required"><%- t('core', 'filter:date:from') %></label>
    <input id="<%- idPrefix %>-from" class="form-control" name="from" type="date" required>
  </div>
  <div class="form-group">
    <label for="<%- idPrefix %>-to" class="control-label is-required"><%- t('core', 'filter:date:to') %></label>
    <input id="<%- idPrefix %>-to" class="form-control" name="to" type="date" required>
  </div>
  <div class="form-group filter-actions">
    <button type="submit" class="btn btn-default"><i class="fa fa-filter"></i><span><%= t('reports', 'filter:submit') %></span></button>
    <hr>
  </div>
  <div class="form-group">
    <label><%- t('reports', 'filter:rows') %></label>
    <div id="<%- idPrefix %>-rows" class="btn-group filter-btn-group" data-toggle="buttons">
      <label class="btn btn-default">
        <input type="checkbox" name="rows[]" value="partner"> <%- t('reports', 'filter:rows:partner') %>
      </label>
      <label class="btn btn-default">
        <input type="checkbox" name="rows[]" value="total"> <%- t('reports', 'filter:rows:total') %>
      </label>
      <label class="btn btn-default">
        <input type="checkbox" name="rows[]" value="balance"> <%- t('reports', 'filter:rows:balance') %>
      </label>
      <label class="btn btn-default">
        <input type="checkbox" name="rows[]" value="summary"> <%- t('reports', 'filter:rows:summary') %>
      </label>
    </div>
  </div>
</form>
