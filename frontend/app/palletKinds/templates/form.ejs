<form class="palletKinds-form" method="post" action="<%- formAction %>">
  <input type="hidden" name="_method" value="<%- formMethod %>">
  <div class="panel panel-primary">
    <div class="panel-heading"><%- panelTitleText %></div>
    <div class="panel-body">
      <div class="form-group">
        <label for="<%- idPrefix %>-name" class="control-label"><%- t('palletKinds', 'PROPERTY:name') %></label>
        <input id="<%- idPrefix %>-name" class="form-control" type="text" name="name" autofocus required maxlength="30">
      </div>
      <div class="form-group">
        <label for="<%- idPrefix %>-description" class="control-label"><%- t('palletKinds', 'PROPERTY:description') %></label>
        <input id="<%- idPrefix %>-description" class="form-control" type="text" name="description" maxlength="200">
      </div>
      <div class="form-group">
        <label for="<%- idPrefix %>-no" class="control-label"><%- t('palletKinds', 'PROPERTY:no') %></label>
        <input id="<%- idPrefix %>-no" class="form-control" type="text" name="no">
      </div>
      <div class="form-group">
        <label for="<%- idPrefix %>-position" class="control-label"><%- t('palletKinds', 'PROPERTY:position') %></label>
        <input id="<%- idPrefix %>-position" class="form-control" type="number" name="position" min="1" step="1">
      </div>
    </div>
    <div class="panel-footer">
      <button type="submit" class="btn btn-primary"><%- formActionText %></button>
    </div>
  </div>
</form>
