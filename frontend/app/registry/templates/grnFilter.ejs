<form class="well filter-form">
  <% if (!user.data.partner) { %>
  <div class="form-group">
    <label for="<%- idPrefix %>-<%- firstPartnerProperty %>"><%- t('registry', 'PROPERTY:' + firstPartnerProperty) %></label>
    <input id="<%- idPrefix %>-<%- firstPartnerProperty %>" name="<%- firstPartnerProperty %>" type="text">
  </div>
  <% } %>
  <div class="form-group">
    <label for="<%- idPrefix %>-<%- secondPartnerProperty %>"><%- t('registry', 'PROPERTY:' + secondPartnerProperty) %></label>
    <input id="<%- idPrefix %>-<%- secondPartnerProperty %>" name="<%- secondPartnerProperty %>" type="text">
  </div>
  <div class="form-group">
    <label for="<%- idPrefix %>-from" title="<%- t('core', 'filter:date:from:inclusive') %>"><i class="fa fa-info-circle"></i> <%- t('registry', 'FILTER:date:from') %></label>
    <input id="<%- idPrefix %>-from" class="form-control" name="from" type="date">
  </div>
  <div class="form-group">
    <label for="<%- idPrefix %>-to" title="<%- t('core', 'filter:date:to:exclusive') %>"><i class="fa fa-info-circle"></i> <%- t('registry', 'FILTER:date:to') %></label>
    <input id="<%- idPrefix %>-to" class="form-control" name="to" type="date">
  </div>
  <div class="form-group filter-datePicker">
    <div class="btn-group">
      <button class="btn btn-default dropdown-toggle" type="button" title="<%- t('core', 'filter:datePicker') %>" data-toggle="dropdown">
        <i class="fa fa-calendar"></i><span class="visible-xs-inline"><%- t('core', 'filter:datePicker') %></span>
      </button>
      <ul class="dropdown-menu dropdown-menu-right">
        <li><a data-range="today"><%= t('core', 'filter:datePicker:today') %></a></li>
        <li><a data-range="yesterday"><%= t('core', 'filter:datePicker:yesterday') %></a></li>
        <li class="divider"></li>
        <li><a data-range="currentWeek"><%= t('core', 'filter:datePicker:currentWeek') %></a></li>
        <li><a data-range="prevWeek"><%= t('core', 'filter:datePicker:prevWeek') %></a></li>
        <li class="divider"></li>
        <li><a data-range="currentMonth"><%= t('core', 'filter:datePicker:currentMonth') %></a></li>
        <li><a data-range="prevMonth"><%= t('core', 'filter:datePicker:prevMonth') %></a></li>
      </ul>
    </div>
  </div>
  <div class="form-group">
    <label for="<%- idPrefix %>-docNo"><%- t('registry', 'PROPERTY:docNo') %></label>
    <input id="<%- idPrefix %>-docNo" class="form-control" name="docNo" type="text">
  </div>
  <div class="form-group">
    <label for="<%- idPrefix %>-limit"><%- t('registry', 'FILTER:limit') %></label>
    <input id="<%- idPrefix %>-limit" class="form-control" name="limit" type="number" value="25" min="5" max="1000" step="1">
  </div>
  <div class="form-group filter-actions">
    <button type="submit" class="btn btn-default"><i class="fa fa-filter"></i><span><%= t('registry', 'FILTER:submit') %></span></button>
  </div>
</form>
