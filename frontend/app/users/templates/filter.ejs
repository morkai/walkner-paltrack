<form class="well filter-form">
  <div class="form-group">
    <label for="<%- idPrefix %>-lastName"><%- t('users', 'PROPERTY:lastName') %></label>
    <input id="<%- idPrefix %>-lastName" class="form-control" name="lastName" type="text" placeholder="<%- t('users', 'filter:placeholder:lastName') %>">
  </div>
  <div class="form-group">
    <label for="<%- idPrefix %>-partner"><%- t('users', 'PROPERTY:partner') %></label>
    <input id="<%- idPrefix %>-partner" name="partner" type="text" placeholder="<%- t('users', 'filter:placeholder:partner') %>">
  </div>
  <%- renderLimit() %>
  <div class="form-group filter-actions">
    <input type="submit" class="btn btn-default" value="<%= t('users', 'filter:submit') %>">
  </div>
</form>