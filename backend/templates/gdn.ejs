<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <title>WZ #<%- docNo %></title>
  <style>
    * {
      box-sizing: border-box;
    }
    body {
      font-family: Verdana;
      color: #000;
      background: #fff;
      margin: 0;
      line-height: 1;
      font-size: 13px;
    }
    h1 {
      position: relative;
      margin: 0 0 26px 0;
      font-size: 96px;
      line-height: 1;
      border-bottom: 2px solid #000;
    }
    #sendDate {
      position: absolute;
      bottom: 0;
      right: 0;
      display: block;
      margin-bottom: 7px;
      font-size: 18px;
      white-space: nowrap;
    }
    #sendDate span {
      display: block;
      margin-top: 4px;
      font-weight: normal;
    }
    h2 {
      margin: 0 0 13px 0;
      font-size: 18px;
    }
    pre {
      margin: 0;
      font-family: Verdana;
      line-height: 1.25;
      font-size: 16px;
    }
    .supplier {
      padding-right: 13px;
    }
    .receiver {
      padding-left: 13px;
    }
    .supplier, .receiver {
      display: inline-block;
      width: 50%;
      vertical-align: top;
      overflow: hidden;
    }
    table {
      clear: both;
      margin-top: 26px;
      width: 100%;
      border-collapse: collapse;
    }
    td, th {
      border: 2px solid #000;
      padding: 8px 8px;
      font-size: 18px;
    }
    th {
      width: 1%;
      text-align: left;
    }
    td:first-child,
    td:last-child {
      text-align: right;
    }
    tfoot td {
      border: 0;
      text-align: right;
    }
    tfoot td:last-child {
      border: 2px solid #000;
    }
    td:last-child {
      font-family: "Courier New";
    }
    .name {
      width: auto;
    }
    .no {
      min-width: 120px;
    }
  </style>
</head>
<body>
<h1>
  WZ #<%- docNo %>
  <span id="sendDate">Data wysyłki:<br><span><%- sendDate %></span></span>
</h1>
<div class="supplier">
  <h2>Dostawca</h2>
  <pre><%- supplier %></pre>
</div><div class="receiver">
  <h2>Odbiorca</h2>
  <pre><%- receiver %></pre>
</div>
<table>
  <thead>
    <tr>
      <th>Lp.</th>
      <th class="no">Nr</th>
      <th class="name">Nazwa</th>
      <th>Ilość</th>
    </tr>
  </thead>
  <tfoot>
    <tr>
      <td></td>
      <td></td>
      <td>Suma:</td>
      <td><%- total %></td>
    </tr>
  </tfoot>
  <tbody>
    <% goods.forEach(function(item) { %>
    <tr>
      <td><%- item.no %>.</td>
      <td><%- item.number %></td>
      <td><%- item.name %></td>
      <td><%- item.count %></td>
    </tr>
    <% }) %>
  </tbody>
</table>
</body>
</html>
